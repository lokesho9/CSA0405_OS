#include <stdio.h>
int main() {
    int n=3, bt[3]={10,5,8}, pr[3]={2,1,3}, p[3]={1,2,3}, wt[3], tat[3], i,j,t;
    for(i=0;i<n-1;i++) for(j=i+1;j<n;j++)
        if(pr[i]<pr[j]) {t=pr[i];pr[i]=pr[j];pr[j]=t;
                         t=bt[i];bt[i]=bt[j];bt[j]=t;
                         t=p[i];p[i]=p[j];p[j]=t;}
    wt[0]=0; for(i=1;i<n;i++) wt[i]=wt[i-1]+bt[i-1];
    for(i=0;i<n;i++) tat[i]=wt[i]+bt[i];
    printf("P\tBT\tPR\tWT\tTAT\n");
    for(i=0;i<n;i++) printf("P%d\t%d\t%d\t%d\t%d\n",p[i],bt[i],pr[i],wt[i],tat[i]);
}
OUTPUT:
P1	10	2	8	18
P2	5	1	18	23
