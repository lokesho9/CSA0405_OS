#include <stdio.h>
struct emp{ int id; char name[20]; float sal; };
int main(){
    FILE *fp; struct emp e; int n,i,pos;
    fp=fopen("emp.dat","wb+");
    printf("Enter employees: "); scanf("%d",&n);
    for(i=0;i<n;i++){
        printf("ID Name Salary: ");
        scanf("%d %s %f",&e.id,e.name,&e.sal);
        fwrite(&e,sizeof(e),1,fp);
    }
    printf("Record to fetch: "); scanf("%d",&pos);
    fseek(fp,(pos-1)*sizeof(e),SEEK_SET);
    fread(&e,sizeof(e),1,fp);
    printf("ID=%d Name=%s Salary=%.2f\n",e.id,e.name,e.sal);
    fclose(fp);
}
OUPUT:
Enter employees: 2
ID Name Salary: 101 JHON 2500
ID Name Salary: 102 MARY 3000
Record to fetch: 1
ID=101 Name=JHON Salary=2500.00
