#include <stdio.h>
#include <pthread.h>

pthread_mutex_t lock;

void* task(void* arg) {
    int id = *(int*)arg;
    pthread_mutex_lock(&lock);   // lock critical section
    printf("Thread %d is in critical section\n", id);
    pthread_mutex_unlock(&lock); // unlock
    return NULL;
}

int main() {
    pthread_t t1, t2;
    int a = 1, b = 2;

    pthread_mutex_init(&lock, NULL);

    pthread_create(&t1, NULL, task, &a);
    pthread_create(&t2, NULL, task, &b);

    pthread_join(t1, NULL);
    pthread_join(t2, NULL);

    pthread_mutex_destroy(&lock);
    return 0;
}
OUTPUT:
Thread 1 is in critical section
Thread 2 is in critical section
