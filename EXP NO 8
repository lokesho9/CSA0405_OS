#include <stdio.h>
int main(){
    int n,i,bt[10],rt[10],tq,t=0,done=0;
    printf("Enter no of processes: "); scanf("%d",&n);
    for(i=0;i<n;i++){ printf("BT P%d: ",i+1); scanf("%d",&bt[i]); rt[i]=bt[i]; }
    printf("Enter Time Quantum: "); scanf("%d",&tq);
    while(done<n){
        for(i=0;i<n;i++){
            if(rt[i]>0){
                if(rt[i]>tq){ t+=tq; rt[i]-=tq; }
                else{ t+=rt[i]; rt[i]=0; done++; printf("P%d finished at %d\n",i+1,t); }
            }
        }
    }
}
OUTPUT:
Enter no of processes: 4
BT P1: 1
BT P2: 2
BT P3: 3
BT P4: 4
Enter Time Quantum: 4
P1 finished at 1
P2 finished at 3
P3 finished at 6
P4 finished at 10
